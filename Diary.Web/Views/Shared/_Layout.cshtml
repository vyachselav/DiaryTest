<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Diary", "Index", "Notes", new { }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Create Note", "NewNote", "Notes")</li>
                    <li>@Html.ActionLink("To List", "Index", "Notes")</li>
                    <li><a href="@Url.RouteUrl("Api", new { httproute = "", controller = "Values" })">Api</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Filter By Date
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="input-daterange input-group" id="datepicker">
                                    <input type="text" class="input-sm form-control date-picker-input" name="start" id="from" />
                                    <span class="input-group-addon">to</span>
                                    <input type="text" class="input-sm form-control date-picker-input" name="end" id="to" />
                                </div>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Notes", new { from ="",to="" }, null)"
                                   class="btn btn-default" , id="btn-filter">Filter</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a id="user-name">Logged in as @User.Identity.Name</a></li>
                    
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                </ul>
            </div>
        </div>
</div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
